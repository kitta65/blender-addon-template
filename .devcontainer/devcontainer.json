{
  "name": "blender",
  "image": "lscr.io/linuxserver/blender:4.0.2-ls99",
  "overrideCommand": false,
  "workspaceFolder": "/config/workspaces",
  "workspaceMount": "source=${localWorkspaceFolder},target=/config/workspaces,type=bind",
  "forwardPorts": [
    3000,
    3001
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "ln -s /blender/4.0/python/bin/python3.10 /usr/local/bin/python && python -m pip install fake-bpy-module-4.0 && ln -s /config/workspaces/src /blender/4.0/scripts/addons/${localWorkspaceFolderBasename}",
  "containerEnv": {
    // specify the same value as your local environement
    "PUID": "1000", // id -u
    "PGID": "1000", // id -g
    "TZ": "Etc/UTC" // cat /etc/timezone
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/blender/4.0/python/bin"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/blender/4.0/python/bin/python3.10"
      }
    }
  }
}